# include <iostream>
# include <fstream>
# include <string>

using namespace std;

int main ()
{
	string line;
	int i = 0, cont = 0;
	const char PIPE = 124;
	ifstream amount ("read.txt");
	if (amount.is_open())
	{
		while (getline (amount,line))
		{
			cont++;
		}
		amount.close();
	}
	string prod[cont];
	ifstream read ("read.txt");
	if (read.is_open())
	{
		while (getline (read,line))
		{
			cout << line.length() << endl;
			prod[i] = line;
			i++;
		}
		read.close();
	}
	else
	{
		cout << "Unable to open file";
	}
	for (int a = 0; a < i; a++)
		cout << prod[a] << endl;
	return 0;
}
